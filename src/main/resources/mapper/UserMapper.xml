<mapper namespace="com.bnuz.filemanagement.mapper.UserMapper">
    <!-- 添加用户 -->
    <insert id="insertUser" parameterType="com.bnuz.filemanagement.model.User">
        insert into user(username,password)values(#{username},#{password});
    </insert>

    <!-- 查询所有用户信息 -->
