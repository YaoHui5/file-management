<!--        select *from user;-->
<!--    </select>-->

    <!-- 根据用户id查询信息 -->
<!--    <select id="selectUserByUid" resultType="com.bnuz.filemanagement.model.User">-->
<!--        select id,username,password from user where id=#{uid}-->
<!--    </select>-->

    <!-- 用户注册 -->
    <insert id="register">
        insert into user (username,password) values (#{username},#{password});
    </insert>

    <!-- 用户登录 -->
    <select id="login" resultType="com.bnuz.filemanagement.model.User">
        select id,username,password from user where username=#{username} and password=#{password};
    </select>

</mapper>